#include <stdio.h>

int main() 
{


  int ano;
  printf("\n Digite o ano por gentileza: ");
  scanf("%d", &ano);
  
  if (ano % 4 == 0 && (ano % 400 == 0 || ano % 100 != 0)) {
    printf("\nAno bissexto.\n");
  
  }
  
  else {
    printf("\n Ano nao bissexto .\n");
  
  }

  return 0;
}


