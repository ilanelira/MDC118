1)
#include <stdio.h>

int main()
{

    int dia, mes, ano;
    long int amd;
    char data[9] = {'\0'};

    printf("Entre com a data (DD/MM/AAAA): "); 
    scanf("%d/%d/%d", &dia, &mes, &ano);

    printf("\n\n");

    sprintf(data, "%d%02d%02d", dia, mes, ano);
    amd = atol(data);

    printf("Dia = %d\n", dia);
    printf("Mes = %d\n", mes);
    printf("Ano = %d\n", ano);
    printf("DDMMAAAA= %ld\n", amd);

    sprintf(data, "%d%02d%02d", mes, dia, ano);
    amd = atol(data);

    printf("Mes = %d\n", mes);
    printf("Dia = %d\n", dia);
    printf("Ano = %d\n", ano);
    printf("MMDDAAAA= %ld\n", amd);
    

    return 0;
}


