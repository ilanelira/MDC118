int main() 
{
int gigabytes, bytes ;
printf("Digite por gentileza a quantidade de Gigabytes :");
scanf("%d", &gigabytes);

bytes = 1073741824 *gigabytes;

printf ("Bytes: %d\n", bytes);

  return 0;
}

